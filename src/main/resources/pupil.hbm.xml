<?xml version="1.0" encoding = "UTF-8"?>
        <!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
        <hibernate-mapping>
    <class name="akvelontask.entity.Pupil" table="pupils">
        <id name="id" column="id" type="java.lang.Integer">
            <generator class="increment"/>
        </id>
        <property name="firstName" column="first_name" type="java.lang.String"/>
        <property name="lastName" column="last_name" type="java.lang.String"/>
        <property name="birthday" column="birthday" type="java.sql.Date"/>
        <property name="classPhase" column="class_phase" type="java.lang.Integer"/>
        <property name="classGroup" column="class_group" type="java.lang.Character"/>
    </class>
        </hibernate-mapping>